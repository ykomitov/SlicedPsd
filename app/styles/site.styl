  border-bottom 1px solid #d5d5d5

#search-input
  width 120px
  height 100%
  padding-left 10px
  background-color rgba(0, 0, 0, 0)
  vertical-align middle overflow hidden

#search-submit
  position absolute
  top 8px
  right 11px

#search-input::-webkit-input-placeholder
  font-size 11px
  font-family Georgia
  font-style italic
  color #a5a5a5
  line-height 18px

#search-input::-moz-placeholder
  font-size 11px
  font-family Georgia
  font-style italic
  color #a5a5a5

#search-input:-ms-input-placeholder
  font-size 11px
  font-family Georgia
  font-style italic
  color #a5a5a5

#sharing-icons
  position absolute
  top 8px
  right 180px

#logo
  position absolute
  width 235px

  img
    margin 26px 0 0 34px

  #slogan
    position relative
    bottom 25px
    right -85px
    text-transform uppercase
    font-family 'Kreon', serif
    font-size 12px
    color #437d8b

#location-bar.inner-page
  background-color white
  background-image none

  a
    text-transform none
    color #c2c2c2

    &:after
      margin-left 8px
      content "Â»"

#location-bar.inner-page li:last-of-type a
  color #747474

  &:after
    content ""

#location-bar.inner-page ul
  margin-left 42px

  li
    padding-left 8px

#location-bar
  width 100%
  height 50px
  background-image url("../images/nav-background.jpeg")
  background-repeat repeat

  ul
    margin 0
    padding 0
    list-style none

  li
    float left
    padding-left 22px
    margin 15px 0 0 0

  a
    font-family 'Kreon', serif
    font-size 15px
    text-decoration none
    text-transform uppercase
    font-weight 300
    color #393939

  a:hover
    color #437d8b

#main-content
  width 860px
  margin 0 auto

.btn.post-link
  float right
  margin 25px 37px 0 0
  width 70px
  height 25px
  border-radius: 6px;
  font-family: 'Kreon', serif
  font-weight 300
  color: #1d1d1d;
  font-size: 12px;
  line-height 24px;
  text-decoration none
  text-align center
  background: #fff;
  padding 0
  border: solid #eaeaea 1px;

  &:hover
    background: #f5f5f5;
    background-image: -webkit-linear-gradient(top, #f5f5f5, #fafafa);
    background-image: -moz-linear-gradient(top, #f5f5f5, #fafafa);
    background-image: -ms-linear-gradient(top, #f5f5f5, #fafafa);
    background-image: -o-linear-gradient(top, #f5f5f5, #fafafa);
    background-image: linear-gradient(to bottom, #f5f5f5, #fafafa);

#main.inner-page
  width 585px
  height 840px
  padding-top 35px
  border-right 1px solid #f0f0f0

  .pager
    padding-right 33px

  .pager-buttons
    float right

  .pager .btn.post-link
    float left
    width 25px
    margin-right 5px

  .btn.post-link.current
    background-color #f6f6f6

  .post-preview
    overflow hidden

    h1
      color: #1d1d1d

    p.post-info
      display block
      margin 20px 0
      padding 5px 0
      width 550px
      border-top 1px solid #f0f0f0
      border-bottom 1px solid #f0f0f0
      font-family 'Kreon', serif
      font-weight 300
      font-size 15px
      color #ddd

      .post-user, .post-category
        color #a3a3a3

    .post-img-container
      float left
      width 197px
      height 197px
      padding 6px
      border 1px solid #f0f0f0

      img
        width 100%

    .post-text
      height 197px
      padding 0 38px 0 28px
      overflow hidden
      font-family 'Droid Sans'
      font-size 12px
      line-height 20px
      color #929292

#main.inner-page .post-preview.post-full .post-info
  margin 0 0 20px 0

#main.inner-page .post-preview.post-full .post-text
  padding 0 38px 0 0
  height 100%

#main.inner-page .post-preview.post-full .post-img-container
  margin 0 25px 0 0

#main.inner-page.post
  height 100%

aside.inner-page
  width 275px
  padding-top 35px
  float right
  font-family 'Droid Sans'
  font-size 12px
  color #929292

  .aside-element
    padding 0 0 30px 50px

    a
      text-decoration none
      color #929292

    ul
      margin-left 12px

      li
        margin-top 10px

#page-heading.inner-page
  margin 10px auto 0 auto
  background -moz-linear-gradient(top, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 17%, rgba(255, 255, 255, 1) 83%, rgba(248, 248, 248, 1) 100%)
  background -webkit-linear-gradient(top, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 17%, rgba(255, 255, 255, 1) 83%, rgba(248, 248, 248, 1) 100%)
  background linear-gradient(to bottom, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 17%, rgba(255, 255, 255, 1) 83%, rgba(248, 248, 248, 1) 100%)

  h1, h3
    text-transform capitalize

#page-heading
  border-top 1px solid #f0f0f0
  border-bottom 1px solid #f0f0f0
  font-family 'Kreon', serif
  width 888px
  height 128px
  margin 55px auto 0 auto
  text-align center

  h1
    text-transform none
    margin-top 30px
    color #1d1d1d

  h3
    text-transform none
    color #929292

.list
  box-sizing border-box
  list-style none

.list .item
  float left
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  margin 0 62px 0 0
  width 240px

  p
    font-family 'Droid Sans'
    font-size 12px
    line-height 24px
    color #929292
    width 100%
    padding-left 5px

  img
    width 100%
    margin 10px 0
    border 3px solid white
    -webkit-box-shadow 1px 1px 2px 1px rgba(0, 0, 0, 0.75)
    -moz-box-shadow 1px 1px 2px 1px rgba(0, 0, 0, 0.75)
    box-shadow 1px 1px 2px 1px rgba(0, 0, 0, 0.75)

  &:last-child
    margin-right 0

#info-container
  margin-top 45px

#multimedia-container
  margin-top 50px
  width 100%
  height 200px
  background-color white

#blog-posts
  width 33.333%
  float left

  ul, a
    margin 0
    padding-left 10px
    font-family 'Droid Sans'
    font-size 12px
    line-height 24px
    color #a3a3a3

    a
      text-decoration none

#multimedia
  width 66.666%
  float none
  margin-left 300px
  overflow visible

  h3
    margin-bottom 10px

footer
  height 285px
  padding 35px 50px 0 50px
  background-color #f9f9f9
  border-top 1px solid #ececec
  margin-bottom 100px
  font-family 'Droid Sans'
  font-size 12px
  color #929292

  .footer-element
    float left
    width 190px
    margin-right 33px

    &:last-of-type
      margin 0

  h3
    margin-bottom 10px

  h6
    font-family 'Kreon', serif
    font-size 12px
    font-weight 400
    color #717171

  a
    text-decoration none
    color #929292

  img
    margin-bottom 5px

  & > p
    position absolute
    bottom 0
    right 0
    margin 0 50px 30px 0
    color #cdcdcd

  i
    color #929292
    font-style normal

.footer-list
  ul
    margin-left 12px

    li
      margin-top 10px

.footer-element p
  line-height 20px

#comments-container
  width 546px
  clear both

  .comment-avatar
    display table-cell
    width 100px
    padding-top 16px

  .comment-date
    float: right
    margin-right 20px

  .comment-body
    position relative
    display table-cell
    vertical-align top
    padding-top 16px

    p
      line-height 20px
      padding-right 10px
      margin-bottom 40px

  .comment.reply
    width 460px
    float right

  .comment
    position relative
    width 544px
    margin-bottom 30px
    border 1px solid #f0f0f0
    background -moz-linear-gradient(top, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 13%, rgba(255, 255, 255, 1) 87%, rgba(248, 248, 248, 1) 100%) /* FF3.6-15 */
    background -webkit-linear-gradient(top, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 13%, rgba(255, 255, 255, 1) 87%, rgba(248, 248, 248, 1) 100%) /* Chrome10-25,Safari5.1-6 */
    background linear-gradient(to bottom, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 13%, rgba(255, 255, 255, 1) 87%, rgba(248, 248, 248, 1) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

    &:after
      content: "";
      position: absolute;
      bottom: -20px;
      right: 40px;
      border-width: 20px 0 0 20px;
      border-style: solid;
      border-color: #f9f9f9 transparent;
      display: block;
      width: 0;

  .btn.post-link
    position absolute
    margin 0
    bottom 8px
    right 10px

  h1
    margin 50px 0 20px 0

  img
    margin-left 16px
    border 5px solid white
    box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.1);
    -moz-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.1);
    -webkit-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.1);
    -o-box-shadow: 0 0 1px 1px rgba(0, 0, 0, 0.1);

  .user-name
    font-family 'Kreon', serif
    font-weight 300
    font-size 20px
    color #1d1d1d

  .comment-date
    font-family Georgia
    font-size: 12px
    font-style italic
    color #d4d4d4

  .comment-text
    font-family 'Droid Sans', serif
    font-size: 12px
    color #929292

#comment-form
  width 545px
  padding 0 0 90px 0

  h1
    margin 0 0 20px 0

  .btn.post-link
    margin 20px 0 0 0

#comment-name, #comment-email, #comment-text
  display block
  padding 0 25px
  border 1px solid #ededed
  font-family 'Droid Sans', serif
  font-size 12px
  color #929292

#comment-name, #comment-email
  width 275px
  height 38px
  margin 0 0 10px 0
  background -moz-linear-gradient(top, rgba(249, 249, 249, 1) 0%, rgba(255, 255, 255, 1) 62%, rgba(255, 255, 255, 1) 100%)
  background -webkit-linear-gradient(top, rgba(249, 249, 249, 1) 0%, rgba(255, 255, 255, 1) 62%, rgba(255, 255, 255, 1) 100%)
  background linear-gradient(to bottom, rgba(249, 249, 249, 1) 0%, rgba(255, 255, 255, 1) 62%, rgba(255, 255, 255, 1) 100%)

#comment-text
  padding 20px 25px
  width 492px
  height 128px
  background -moz-linear-gradient(top, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 13%, rgba(255, 255, 255, 1) 87%, rgba(248, 248, 248, 1) 100%)
  background -webkit-linear-gradient(top, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 13%, rgba(255, 255, 255, 1) 87%, rgba(248, 248, 248, 1) 100%)
  background linear-gradient(to bottom, rgba(248, 248, 248, 1) 0%, rgba(255, 255, 255, 1) 13%, rgba(255, 255, 255, 1) 87%, rgba(248, 248, 248, 1) 100%)



html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input
  margin 0
  padding 0
  border 0
  vertical-align baseline

.self-clear,
#header,
#nav ul,
#footer,
.list
  zoom 1

.self-clear:after,
#header:after,
#nav ul:after,
#footer:after,
.list:after
  content ""
  clear both
  display block

body
  background-repeat repeat

h3
  font-family 'Kreon', serif
  font-weight 300
  font-size 20px
  text-transform capitalize
  color #1d1d1d

#wrap
  width 960px
  margin 50px auto 0 auto
  position relative
  background-color white

  nav.inner-page a
    text-transform uppercase

  nav
    float right
    margin 54px 0 0 0
    padding-right 14px

    ul
      list-style none

    li
      float left
      padding-left 5px
      margin 0 16px 0 0

    a
      font-family 'Kreon', serif
      font-size 15px
      text-decoration none
      font-weight 300
      color #393939

    a:hover
      color #437d8b

#header
  width 958px
  height 97px
  background rgb(247, 247, 247) /* Old browsers */
  background -moz-linear-gradient(top, rgba(247, 247, 247, 1) 0%, rgba(255, 255, 255, 1) 26%, rgba(255, 255, 255, 1) 100%) /* FF3.6-15 */
  background -webkit-linear-gradient(top, rgba(247, 247, 247, 1) 0%, rgba(255, 255, 255, 1) 26%, rgba(255, 255, 255, 1) 100%) /* Chrome10-25,Safari5.1-6 */
  background linear-gradient(to bottom, rgba(247, 247, 247, 1) 0%, rgba(255, 255, 255, 1) 26%, rgba(255, 255, 255, 1) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  box-shadow 0 7px 6px -10px #000
  border 1px solid white
  overflow hidden

#search-box
  position absolute
  top 1px
  right 1px
  width 160px
  height 27px
  background -moz-linear-gradient(top, rgba(215, 215, 215, 0.29) 0%, rgba(234, 235, 235, 0.29) 62%, rgba(237, 236, 237, 0.29) 73%, rgba(237, 237, 237, 0.29) 100%) /* FF3.6-15 */
  background -webkit-linear-gradient(top, rgba(215, 215, 215, 0.29) 0%, rgba(234, 235, 235, 0.29) 62%, rgba(237, 236, 237, 0.29) 73%, rgba(237, 237, 237, 0.29) 100%) /* Chrome10-25,Safari5.1-6 */
  background linear-gradient(to bottom, rgba(215, 215, 215, 0.29) 0%, rgba(234, 235, 235, 0.29) 62%, rgba(237, 236, 237, 0.29) 73%, rgba(237, 237, 237, 0.29) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  border-left 1px solid #d5d5d5
  border-bottom 1px solid #d5d5d5

#search-input
  width 120px
  height 100%
  padding-left 10px
  background-color rgba(0, 0, 0, 0)
  vertical-align middle overflow hidden

#search-submit
  position absolute
  top 8px
  right 11px

#search-input::-webkit-input-placeholder
  font-size 11px
  font-family Georgia
  font-style italic
  color #a5a5a5
  line-height 18px

#search-input::-moz-placeholder
  font-size 11px
  font-family Georgia
  font-style italic
  color #a5a5a5

#search-input:-ms-input-placeholder
  font-size 11px
  font-family Georgia
  font-style italic
  color #a5a5a5

#sharing-icons
  position absolute
  top 8px
  right 180px

#logo
  position absolute

  img
    margin 26px 0 0 34px

  #slogan
    position relative
    bottom 8px
    right 146px
    text-transform uppercase
    font-family 'Kreon', serif
    font-size 12px
    color #437d8b

#second-nav.inner-page
  background-color white
  background-image none

  a
    text-transform none
    color #c2c2c2

    &:after
      margin-left 8px
      content "Â»"

#second-nav.inner-page li:last-of-type a
  color #747474

  &:after
    content ""

#second-nav.inner-page ul
  margin-left 42px

  li
    padding-left 8px

#second-nav
  width 100%
  height 51px
  background-image url("../images/nav-background.jpeg")
  background-repeat repeat

  ul
    margin 0
    padding 0
    list-style none

  li
    float left
    padding-left 22px
    margin 15px 0 0 0

  a
    font-family 'Kreon', serif
    font-size 15px
    text-decoration none
    text-transform uppercase
    font-weight 300
    color #393939

  a:hover
    color #437d8b

#main-content, #footer-container
  width 860px
  margin auto

#page-heading
  border-top 1px solid #f0f0f0
  border-bottom 1px solid #f0f0f0
  font-family 'Kreon', serif
  width 888px
  height 128px
  margin 50px auto 0 auto
  text-align center

  h1
    margin-top 30px
    font-weight 300
    font-size 28px
    color #1d1d1d

.list
  box-sizing border-box
  list-style none

.list .item
  float left
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  margin 0 62px 0 0

  p
    font-family 'Droid Sans'
    font-size 12px
    line-height 24px
    color #929292
    width 240px
    padding-left 5px

  img
    margin 10px 0
    border 3px solid white
    -webkit-box-shadow 1px 1px 2px 1px rgba(0, 0, 0, 0.75)
    -moz-box-shadow 1px 1px 2px 1px rgba(0, 0, 0, 0.75)
    box-shadow 1px 1px 2px 1px rgba(0, 0, 0, 0.75)

  &:last-child
    margin-right 0

.col-2.item
  width 50%

.col-3.item
  width 33.33%

.col-4.item
  width 25%

#info-container
  margin-top 45px

#multimedia-container
  margin-top 50px
  width 100%
  height 200px
  background-color white

#blog-posts
  width 33.333%
  float left

  ul, a
    margin 0
    padding-left 10px
    font-family 'Droid Sans'
    font-size 12px
    line-height 24px
    color #a3a3a3

    a
      text-decoration none

#multimedia
  width 66.666%
  float none
  margin-left 300px
  overflow visible

  h3
    margin-bottom 10px

footer
  height 320px
  background-color #f9f9f9
  border-top 1px solid #ececec
  margin-bottom 100px

#footer-container
  margin-top 35px
  font-family 'Droid Sans'
  font-size 12px
  color #929292

  .footer
    float left
    width 190px
    margin-right 33px

    &:last-of-type
      margin 0

  h3
    margin-bottom 10px

  h6
    font-family 'Kreon', serif
    font-size 12px
    font-weight 400
    color #717171

  a
    text-decoration none
    color #929292

  img
    margin-bottom 5px

  & > p
    position absolute
    bottom 0
    right 0
    margin 0 50px 30px 0
    color #cdcdcd

    i
      color #929292
      font-style normal

.footer-list
  ul
    margin-left 12px

    li
      margin-top 10px

.footer p
  line-height 20px

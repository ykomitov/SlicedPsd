html, body, div, span, applet, object, iframe,
h1, h2, h3, h4, h5, h6, p, blockquote, pre,
a, abbr, acronym, address, big, cite, code,
del, dfn, em, img, ins, kbd, q, s, samp,
small, strike, strong, sub, sup, tt, var,
b, u, i, center,
dl, dt, dd, ol, ul, li,
fieldset, form, label, legend,
table, caption, tbody, tfoot, thead, tr, th, td,
article, aside, canvas, details, embed,
figure, figcaption, footer, header, hgroup,
menu, nav, output, ruby, section, summary,
time, mark, audio, video, input
  margin 0
  padding 0
  border 0
  vertical-align baseline

.self-clear,
#header-common,
#nav ul,
footer,
.list
  zoom 1

.self-clear:after,
#header-common:after,
#nav ul:after,
footer:after,
.list:after
  content ""
  clear both
  display block

body
  background-repeat repeat

h1
  font-family 'Kreon', serif
  font-weight 300
  font-size 28px
  text-transform capitalize

h3
  font-family 'Kreon', serif
  font-weight 300
  font-size 20px
  text-transform capitalize
  color #1d1d1d

#wrap
  width 960px
  margin 50px auto 0 auto
  position relative
  background-color white

  nav.inner-page a
    text-transform uppercase

  nav
    float right
    margin 54px 0 0 0
    padding-right 14px

    ul
      list-style none

    li
      float left
      padding-left 5px
      margin 0 16px 0 0

    a
      font-family 'Kreon', serif
      font-size 15px
      text-decoration none
      font-weight 300
      color #393939

    a:hover
      color #437d8b

#header-common
  height 98px
  background rgb(247, 247, 247) /* Old browsers */
  background -moz-linear-gradient(top, rgba(247, 247, 247, 1) 0%, rgba(255, 255, 255, 1) 26%, rgba(255, 255, 255, 1) 100%) /* FF3.6-15 */
  background -webkit-linear-gradient(top, rgba(247, 247, 247, 1) 0%, rgba(255, 255, 255, 1) 26%, rgba(255, 255, 255, 1) 100%) /* Chrome10-25,Safari5.1-6 */
  background linear-gradient(to bottom, rgba(247, 247, 247, 1) 0%, rgba(255, 255, 255, 1) 26%, rgba(255, 255, 255, 1) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  border 1px solid white

#header-common.inner-page
  height 90px

  #logo-text
    position relative
    top -60px
    right -80px
    font-family 'Kreon', serif
    font-size 30px
    text-transform uppercase
    font-weight 300
    color black

  #slogan
    position relative
    display block
    width 170px
    bottom 63px
    right -82px
    text-transform uppercase
    font-family 'Droid Sans', serif
    font-size 13.5px
    color #66929c

#search-box
  position absolute
  top 1px
  right 1px
  width 160px
  height 27px
  background -moz-linear-gradient(top, rgba(215, 215, 215, 0.29) 0%, rgba(234, 235, 235, 0.29) 62%, rgba(237, 236, 237, 0.29) 73%, rgba(237, 237, 237, 0.29) 100%) /* FF3.6-15 */
  background -webkit-linear-gradient(top, rgba(215, 215, 215, 0.29) 0%, rgba(234, 235, 235, 0.29) 62%, rgba(237, 236, 237, 0.29) 73%, rgba(237, 237, 237, 0.29) 100%) /* Chrome10-25,Safari5.1-6 */
  background linear-gradient(to bottom, rgba(215, 215, 215, 0.29) 0%, rgba(234, 235, 235, 0.29) 62%, rgba(237, 236, 237, 0.29) 73%, rgba(237, 237, 237, 0.29) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

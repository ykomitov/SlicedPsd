.slider .slick-arrow
  z-index 666 !important

.slider .slick-prev, .slider .slick-next
  width 36px
  height 36px
  top 165px
  background-repeat no-repeat
  border 1px solid #d5d5d5

.slick-prev::before, .slick-next::before
  content "" !important

.slider .slick-next
  right -5px
  background-image url("../images/prev.jpeg") !important

.slider .slick-prev
  left -5px
  background-image url("../images/back.jpeg") !important

.slider
  height 320px
  position relative

.slider-info-y
  float left
  background-color rgb(0, 0, 0)
  background rgba(0, 0, 0, 0.5)
  font-family 'Kreon', serif
  color white
  position absolute
  top 0
  margin 42px 0 0 495px
  height 200px
  width 372px
  padding 37px 0 0 37px
  overflow hidden

  h1
    margin 0 0 7px 0
    padding 0
    font-weight 300
    font-size 28px
    line-height 28px
    text-transform capitalize
    width 66%

  p
    font-family 'Droid Sans'
    font-size 12px
    line-height 21px
    padding-right 20px
    height 110px
    overflow hidden

  .read-more
    padding 2px 15px
    position absolute
    bottom 0
    right 0
    background-color rgb(0, 0, 0)
    background-color rgba(0, 0, 0, 0.8)

    a
      font-weight 400
      text-transform capitalize
      font-size 13px
      text-decoration none
      color #7b9297

    a:hover
      color white

@media only screen and (max-width: 980px)

  .slider-info-y
    margin 42px 0 0 300px

@media only screen and (max-width: 840px)

  .slider-info-y
    height 200px
    width 350px
    margin 90px 0 0 270px
    padding 10px 0 0 10px

    h1
      width 80%
      text-align center
